@import url('https://s3.amazonaws.com/dtheng.com/jquery.js')
@import url('https://s3.amazonaws.com/dtheng.com/foundation.min.js')
@import url('https://s3.amazonaws.com/dtheng.com/fastclick.js')
@import url('https://s3.amazonaws.com/dtheng.com/placeholder.js')
@import url('https://s3.amazonaws.com/dtheng.com/jquery.autocomplete.js')
@import url('https://s3.amazonaws.com/dtheng.com/jquery.cookie.js')

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

*
  -webkit-font-smoothing antialiased
  
.row
  &.wrapper
    max-width 650px

h1, h2, h3, h4, h5, h6, p 
  font-family "Helvetica Neue","Helvetica",Helvetica,Arial,sans-serif

a 
  color #2980b9
  text-decoration none
  font-weight 500
  
  &:hover, &:focus
    color #236f99

.links-group 
  a.link 
    width 100
    text-align center
    display block
    margin-bottom 40px

  .columns 
    padding 0

img 
  border-radius 100%
  padding 6px
  margin 60px 0 0 0

p 
  font-size 0.95rem
  line-height 1.6rem

button.success, .button.success 
  background-color #669900
  border-color #5a7f00
  
  &:hover, &:focus
    background-color #5a7f00

svg    
  margin 0 auto 8px auto
  width 55px
  display block
  
  .foreground 
    fill #2980b9

.intro 
  h1 
    font-size 20px
    margin 40px 0 10px 0
    font-weight 500
    text-align center
  p 
    margin 30px 0
